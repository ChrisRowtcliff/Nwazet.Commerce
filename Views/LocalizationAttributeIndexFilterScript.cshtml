@using Orchard.ContentManagement
@using Orchard.Localization.Models
@using Nwazet.Commerce.ViewModels
@using (Script.Foot()) {
    AttributesIndexViewModel model = Model.Model;
    <script type="text/javascript">
        $(function () {
        @foreach (var attribute in model.Attributes) {
            var locPart = attribute.ContentItem.As<LocalizationPart>();
            if (locPart != null) {
                string locString = "";
                if (locPart.Culture != null && !string.IsNullOrWhiteSpace(locPart.Culture.Culture)) {
                    locString = T(" ({0})", locPart.Culture.Culture).Text;
                }
                else {
                    locString = T(" (culture undefined)").Text;
                }
                    <text>
            $('table.items tbody tr td a[href*="Edit/@attribute.ContentItem.Id.ToString()"]')[0].after('@locString');
            </text>
                }
        }
    })
    </script>
}